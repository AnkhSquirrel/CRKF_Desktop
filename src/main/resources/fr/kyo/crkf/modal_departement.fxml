<AnchorPane prefHeight="538.0" prefWidth="649.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.kyo.crkf.controller.DepartementModalController">
   <children>
      <VBox alignment="CENTER" prefHeight="451.0" prefWidth="649.0">
         <children>
            <Label fx:id="nomModal" alignment="CENTER" text="Création d'un nouveau département">
               <VBox.margin>
                  <Insets top="100.0" />
               </VBox.margin>
               <font>
                  <Font size="25.0" />
               </font>
            </Label>
            <GridPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="83.0" prefWidth="649.0">
               <columnConstraints>
                  <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="150.0" minWidth="120.0" prefWidth="150.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="454.0" minWidth="10.0" prefWidth="452.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Label alignment="CENTER_RIGHT" prefHeight="125.0" prefWidth="150.0" text="Nom :">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <TextField fx:id="nomDep" GridPane.columnIndex="1">
                     <opaqueInsets>
                        <Insets right="20.0" />
                     </opaqueInsets>
                     <GridPane.margin>
                        <Insets left="10.0" right="20.0" />
                     </GridPane.margin>
                  </TextField>
                  <Label alignment="CENTER_RIGHT" prefHeight="125.0" prefWidth="150.0" text="Numéro :" GridPane.rowIndex="1">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <TextField fx:id="numDepartement" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <opaqueInsets>
                        <Insets right="20.0" />
                     </opaqueInsets>
                     <GridPane.margin>
                        <Insets left="10.0" right="20.0" />
                     </GridPane.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets top="100.0" />
               </VBox.margin>
            </GridPane>
            <ButtonBar prefHeight="40.0">
               <buttons>
                  <Button fx:id="buttonAnnuler" alignment="CENTER" contentDisplay="TOP" minWidth="52.0" mnemonicParsing="false" onAction="#closeModal" prefHeight="25.0" prefWidth="299.0" text="Annuler">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#validate" prefHeight="25.0" text="Valider" />
               </buttons>
               <VBox.margin>
                  <Insets bottom="20.0" right="20.0" top="200.0" />
               </VBox.margin>
            </ButtonBar>
         </children>
      </VBox>
   </children>
